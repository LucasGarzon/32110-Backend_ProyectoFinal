<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <title>Proyecto Final || Sign-Up</title>
</head>
<body class="bg-dark">
  <div class="row">
    <div class="mx-auto col-lg-4">
      <div class="alert alert-dark">
        <h1 class="text-center mb-3">Sign-up</h1>
        <form autocomplete="off" action="/" method="post" name="myForm" onsubmit="return validateForm()">
          <div class="form-group">
              <label class="mb-1">Email: *</label>
              <input class="form-control" required type="text" name="email"/>
          </div>
          <div class="form-group">
              <label class="mb-1">First Name: *</label>
              <input class="form-control" required type="text" name="first_name"/>
          </div>
          <div class="form-group">
              <label class="mb-1">Last Name: *</label>
              <input class="form-control" required type="text" name="last_name"/>
          </div>
          <div class="form-group">
              <label class="mb-1">Address: *</label>
              <input class="form-control" required type="text" name="address"/>
          </div>
          <div class="form-group">
              <label class="mb-1">Password: *</label>
              <input class="form-control" required type="password" name="password"/>
          </div>
          <div class="form-group">
              <label class="mb-1">Confirm Password: *</label>
              <input class="form-control" required type="password" name="confirm_password"/>
          </div>
          <div class="d-flex flex-column flex-lg-row justify-content-between">
              <div class="form-group mt-3 mb-3">
                <input type="submit" class="btn btn-dark" value="Create User"/>
              </div>
              <div class="form-group mt-3 mb-3">
                <a href="/login">
                    <button type="button" class="btn btn-outline-success">I already have a user</button>
                </a>
              </div>
          </div>
      </form>                  
    </div>          
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>
  <script>
    function validateForm(){
      let password = document.forms["myForm"]["password"].value;
      let confirmPassword = document.forms["myForm"]["confirm_password"].value;
      if (password !== confirmPassword) {
        alert("Las contrase√±as deben coincidir");
        return false;
      } else {
        return true;
      }
    }
  </script>
</body>
</html>